                        <Label Content="Torjan协议，不支持CDN" Margin="20,0,0,0" />

                        <CheckBox Content="ShadowSocksAEAD" 
                          Style="{StaticResource MahApps.Styles.CheckBox}" 
                          IsChecked="{Binding Path=Settings.CheckedShadowSocks}"
